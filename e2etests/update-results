#!/bin/bash

medir="${0%/*}"

update() {
    local TEST_NAME=$1
    (
        . "${medir}/zenlog-test-common"

        cd "$medir" || exit 1

        out=results/$TEST_NAME
        rm -fr "$out"
        mkdir -p "$out"
        $TREE "$ZENLOG_DIR" > "$out"/tree.txt
        cp -pr "$ZENLOG_DIR" "$out"/files
    )
}

update 01
update 02
update 03
update 04