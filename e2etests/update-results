#!/bin/bash

medir="${0%/*}"

update() {
    local TEST_NAME=$1
    (
        . "${medir}/zenlog-test-common"

        cd "$medir" || exit 1

        rm -fr results
        mkdir -p results/$TEST_NAME
        $TREE "$ZENLOG_DIR" > results/$TEST_NAME/tree.txt
        cp -pr "$ZENLOG_DIR" results/$TEST_NAME/files
    )
}

update 01